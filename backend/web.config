<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- iisnode sirve TODAS las requests con tu app -->
      <add name="iisnode" path="src/server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="NodeBackend" patternSyntax="ECMAScript" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="src/server.js" />
        </rule>
      </rules>
    </rewrite>
    <!-- deja pasar los errores reales de tu app (Ãºtil para diagnosticar) -->
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>

  <!-- iisnode expone PORT; tu app lo debe usar (process.env.PORT) -->
  <appSettings>
    <add key="PORT" value="8080" />
  </appSettings>
</configuration>
